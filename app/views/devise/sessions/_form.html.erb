<div class="row">
	<div class="col-md-6 col-md-offset-3 login-box">
		<div class="modal-body login">
        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal', :id => "form_login"}) do |f| %>
        <%= f.error_notification %>
        <div class="inputs">
          <%= f.input :email, :required => false, :autofocus => true %>
          <%= f.input :password, :required => false %>
          <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable? %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.button :submit, "Sign in", :class => 'btn btn-primary' ,:id => 'login_button'%>
        <% end %>
        <div class="col-md-6 col-md-offset-3">
          <%= link_to user_omniauth_authorize_path(:facebook), :class => "btn btn-block btn-social btn-facebook"  do %>
          <i class="fa fa-facebook"></i> Connect with Facebook
          <% end %>
        </div>
      </div>
	</div>
</div>
